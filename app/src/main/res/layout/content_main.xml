<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.almayce.dev.app24awd.view.main.MainActivity"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сервисное обслуживание"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_medium" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gvMain"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/rlTitle"
        android:numColumns="3" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gvMain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlCosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

                <Button
                    android:onClick="onMainContentClick"
                    android:id="@+id/btCosts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="показать расходы и историю обслуживания"
                    android:textColor="@android:color/white" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlCosts"
                android:orientation="vertical">

                <LinearLayout
                    android:onClick="onMainContentClick"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_horizontal_margin">

                    <Button
                        android:onClick="onMainContentClick"

                        android:id="@+id/btCrash"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="ДТП"
                        android:textColor="@android:color/white" />

                    <Button
                        android:onClick="onMainContentClick"
                        android:id="@+id/btDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:text="ДОКУМЕНТЫ"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlSecondaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Помощь на дороге"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_medium" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="4dp">

                        <RelativeLayout
                            android:onClick="onMainContentClick"
                            android:id="@+id/rlCoordinates"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/item_back"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/ivItem1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_coordinates" />

                            <TextView
                                android:id="@+id/tvItem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:maxLines="2"
                                android:text="Мои координаты"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="4dp">

                        <RelativeLayout
                            android:onClick="onMainContentClick"
                            android:id="@+id/rlSOS"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/item_back"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/ivItem2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_crash" />

                            <TextView
                                android:id="@+id/tvSOS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:maxLines="2"
                                android:text="SOS"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="4dp">

                        <RelativeLayout
                            android:onClick="onMainContentClick"
                            android:id="@+id/rlLocation"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/item_back"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/ivItem3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_buy" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:maxLines="2"
                                android:text="Локация"
                                android:textAlignment="center"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:onClick="onMainContentClick"

                        android:id="@+id/tvService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="Заказать услугу"
                        android:textColor="@color/colorAccent" />
                    <TextView
                        android:textAlignment="center"

                        android:layout_weight="1"
                        android:onClick="onMainContentClick"

                        android:id="@+id/tvSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="НА САЙТ 24AWD"
                        android:textColor="@color/colorAccent" />
                    <TextView
                        android:textAlignment="center"

                        android:layout_weight="1"
                        android:onClick="onMainContentClick"

                        android:id="@+id/tvParts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="Заказать запчасти"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
